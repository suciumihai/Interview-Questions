<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
      http://dozer.sourceforge.net/schema/beanmapping.xsd">
    <mapping>
        <class-a>interview.model.CategoryTemplate</class-a>
        <class-b>interview.model.DTO.CategoryTemplateDto</class-b>
        <field>
            <a>category</a>
            <b>categoryDto</b>
        </field>
        <field>
            <a>template</a>
            <b>templateDto</b>
        </field>
    </mapping>
    <mapping>
        <class-a>interview.model.Template</class-a>
        <class-b>interview.model.DTO.TemplateDto</class-b>
        <field>
            <a is-accessible="true">categoryTemplates</a>
            <b>categoryTemplatesDto</b>
        </field>
    </mapping>
    <mapping>
        <class-a>interview.model.Question</class-a>
        <class-b>interview.model.DTO.QuestionDto</class-b>
        <field>
            <a>category</a>
            <b>categoryDto</b>
        </field>
        <field>
            <a is-accessible="true">correctAnswers</a>
            <b>correctAnswers</b>
        </field>
        <field>
            <a is-accessible="true">possibleAnswers</a>
            <b>possibleAnswers</b>
        </field>
    </mapping>
    <mapping>
        <class-a>interview.model.Test</class-a>
        <class-b>interview.model.DTO.TestDto</class-b>
        <field>
            <a>template</a>
            <b>templateDto</b>
        </field>
        <field>
            <a>candidate</a>
            <b>candidateDto</b>
        </field>
        <field>
            <a is-accessible="true">testQuestions</a>
            <b>testQuestionsDto</b>
        </field>
    </mapping>
    <mapping>
        <class-a>interview.model.TestQuestion</class-a>
        <class-b>interview.model.DTO.TestQuestionDto</class-b>
        <field>
            <a>category</a>
            <b>categoryDto</b>
        </field>
        <field>
            <a>test</a>
            <b>testDto</b>
        </field>
        <field>
            <a is-accessible="true">correctAnswers</a>
            <b>correctAnswers</b>
        </field>
        <field>
            <a is-accessible="true">possibleAnswers</a>
            <b>possibleAnswers</b>
        </field>
        <field>
            <a is-accessible="true">selectedAnswers</a>
            <b>selectedAnswers</b>
        </field>
    </mapping>
</mappings>